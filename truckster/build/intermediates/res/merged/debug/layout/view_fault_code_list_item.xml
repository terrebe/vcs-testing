<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@drawable/fault_code_background"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

	<TextView
		android:id="@+id/code"
		android:layout_width="@dimen/fault_code_code_width"
		android:layout_height="match_parent"
		android:textAppearance="@android:style/TextAppearance.Large"
		android:padding="10dp"
		android:background="@drawable/fault_code_code_background"
		android:gravity="center_vertical"
		android:text="R2-D2"/>

	<TextView
		android:id="@+id/description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="@dimen/list_item_vertical_margin"
		android:paddingBottom="@dimen/list_item_vertical_margin"
		android:textAppearance="@android:style/TextAppearance.Large"
		android:layout_marginStart="@dimen/fault_code_separator"
		android:layout_marginLeft="@dimen/fault_code_separator"
		android:text="Robot from Star Wars"/>
</LinearLayout>
