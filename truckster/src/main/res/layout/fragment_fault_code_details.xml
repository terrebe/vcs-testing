<com.augumenta.demo.truckster.views.PoseLayout
	android:id="@+id/pose_layout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginTop="@dimen/margin_fragment_top">

	<WebView
		android:id="@+id/webview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
        android:layout_above="@+id/back_indicator"
		android:layout_marginBottom="@dimen/padding_fragment_vertical"
		android:layout_marginLeft="@dimen/padding_fragment_horizontal"
		android:layout_marginRight="@dimen/padding_fragment_horizontal"
		android:layout_marginTop="@dimen/padding_fragment_vertical"/>

    <com.augumenta.demo.truckster.views.PoseIndicator
        android:id="@+id/back_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        app:imageFirst="@drawable/p201"
        app:imageSecond="@drawable/p016"
        android:text="@string/indicator_back"/>

    <com.augumenta.demo.truckster.views.PoseIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:imageFirst="@drawable/p001"
        app:imageSecond="@drawable/p032"
        android:text="@string/indicator_grab"/>

</com.augumenta.demo.truckster.views.PoseLayout>
