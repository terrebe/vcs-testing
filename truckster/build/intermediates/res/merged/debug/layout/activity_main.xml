<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:keepScreenOn="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<FrameLayout
		android:id="@+id/content"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:background="@color/camera_preview_border"
		android:paddingBottom="@dimen/camera_preview_border"
		android:paddingLeft="@dimen/camera_preview_border">

		<SurfaceView
			android:id="@+id/camera_preview"
			android:layout_width="@dimen/camera_preview_width"
			android:layout_height="@dimen/camera_preview_height"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"/>

	</FrameLayout>

</RelativeLayout>
