<com.augumenta.demo.truckster.views.PoseLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
				android:id="@+id/pose_layout"
				app:draggable="false"
				android:layout_marginTop="@dimen/margin_fragment_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="@dimen/menu_margin"
		android:layout_marginLeft="@dimen/menu_margin"
		android:layout_marginRight="@dimen/menu_margin"
		android:layout_marginBottom="@dimen/menu_margin_bottom"
		android:dividerPadding="20dp"
		android:orientation="horizontal">

		<com.augumenta.demo.truckster.views.CompoundButton
			android:id="@+id/menu_button_tasks"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/button_padding"
			android:background="@drawable/button_background"
			android:src="@drawable/start_work"
			android:text="@string/menu_button_tasks"
			android:layout_gravity="fill" />

		<com.augumenta.demo.truckster.views.CompoundButton
			android:id="@+id/menu_button_fault_codes"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/button_padding"
			android:background="@drawable/button_background"
			android:src="@drawable/menu_fault_codes"
			android:text="@string/menu_button_fault_codes"
			android:layout_gravity="fill" />

		<com.augumenta.demo.truckster.views.CompoundButton
			android:id="@+id/menu_button_about_augumenta"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/button_padding"
			android:background="@drawable/button_background"
			android:src="@drawable/menu_about_augumenta"
			android:text="@string/menu_button_about_augumenta"
			android:layout_gravity="fill" />
	</LinearLayout>

	<com.augumenta.demo.truckster.views.PoseIndicator
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		app:imageFirst="@drawable/p001"
		app:imageSecond="@drawable/p032"
		android:text="@string/indicator_select"/>

</com.augumenta.demo.truckster.views.PoseLayout>
